.body {
  /*background-color: #fbf9fe;*/
  width: 750rpx;
}

.cinema-info {
  padding: 30rpx 20rpx;
}

.cinema-name {
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-family: "楷体";
}

.cinema-addr {
  width: 80%;
  font-size: 35rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.cinema-tel {
  font-size: 35rpx;
  color: orangered;
}
.space-between{
  background-color: #fbf9fe;
  height: 25rpx;
  width: 100%;
}
.no-movies-info {
  font-size: 50rpx;
  width: 100%;
  height: 80vh;
  margin-top: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  color: red;
}

.movies-list {
  /*margin-top: 25rpx;*/
  width: 100%;
  position: relative;
}

.movies-title {
  padding-left: 20rpx;
  font-size: 40rpx;
  line-height: 100rpx;
  font-family: "仿宋";
  background-color: #fff;
}

.movies-img-scroll {
  white-space: nowrap;
  z-index: -1;
  background-color: rgba(0, 0, 0, 0.4);
  /*position: relative;*/
}

.movie-img {
  display: inline-block;
  margin: 0 8px;
  height: 100%;
}
.normal-img {
  z-index: 99;
  width: 67px;
  height: 94px;
  margin-top: 25px;
  opacity: 0.5;
  transition: all 0.4s;
}

.big-img {
  z-index: 99;
  width: 76px;
  height: 107px;
  margin-top: 8px;
  border: 2px solid #fff;
  opacity: 1;
  transition: all 0.4s;
}

.background-img {
  position: absolute;
  z-index: -2;
  top: 100rpx;
  width: 100%;
  height: 128px;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  filter: blur(30rpx);
  -webkit-filter: blur(30rpx);
}

.movie-info {
  padding: 30rpx 20rpx;
  position: relative;
  background-color: #fff;
}

.movie-info::after {
  position: absolute;
  content: '';
  width: 20rpx;
  height: 20rpx;
  top: -8rpx;
  left: 365rpx;
  background-color: #fff;
  transform: rotate(45deg);
}

.movie-title {
  margin-bottom: 20rpx;
}

.movie-name {
  font-size: 35rpx;
}

.movie-sc {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: orange;
}

.movie-scm {
  font-size: 30rpx;
  color: #333;
}

.movie-show {
  /*margin-top: 25rpx;*/
  background-color: #fff;
}

.date-scroll {
  white-space: nowrap;
  border-bottom: 1px solid #ccc;
}

.show-date {
  display: inline-block;
  padding: 25rpx 30rpx;
  font-size: 30rpx;
}

.show-selected {
  color: #1afa29;
  position: relative;
}

.show-selected::after {
  content: '';
  width: 100%;
  position: absolute;
  height: 5rpx;
  background-color: #1afa29;
  bottom: 0;
  left: 0;
}

.show-info {
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sell-false {
  color: #ccc;
}

.show-tm {
  font-size: 40rpx;
}

.show-body {
  margin-left: 80rpx;
}

.show-lang-tp {
  font-size: 30rpx;
}

.show-th {
  font-size: 25rpx;
  width: 200rpx;
}

.show-price {
  position: absolute;
  right: 30rpx;
}

.show-pr {
  font-size: 25rpx;
  text-decoration: line-through;
  color: #ccc;
}

.show-sellPr {
  font-size: 40rpx;
  color: orangered;
}

.show-line {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 2rpx;
  background-color: #f0f0f0;
}
