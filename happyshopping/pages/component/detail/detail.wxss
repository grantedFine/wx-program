/* pages/component/detail/detail.wxss */

page {
  background: #ddd;
}

.goods-img {
  width: 100%;
  height: 750rpx;
}

.goods-info {
  padding-top: 15rpx;
  text-indent: 0.5em;
  background: #fff;
}

.goods-title {
  font-size: 38rpx;
}

/*团购信息*/

.group {
  height: 50rpx;
  line-height: 50rpx;
  color: #f45580;
  font-size: 32rpx;
  position: relative;
}

.original {
  position: absolute;
  width: 200rpx;
  text-decoration: line-through;
  top: 5rpx;
  left: 200rpx;
  font-size: 28rpx;
  color: #999;
}

.post {
  position: absolute;
  top: 0;
  right: 20rpx;
  color: #999;
  font-size: 22rpx;
}

/*快递说明*/

.otherAddress {
  position: relative;
  background: #ddd;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-top: 15rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: top;
  color: #666;
}

.otherAddress::before {
  content: "";
  position: absolute;
  left: 50rpx;
  top: -10rpx;
  width: 20rpx;
  height: 20rpx;
  background: #ddd;
  transform: rotate(45deg);
}

/*拼团玩法*/
.iconfont{
  font-size: 50rpx;
}
.icon-purchase{
  color:#f45580;
}
.icon-addfriend{
  color:#ffc548;
}
.icon-duigou{
  color:#7fffd4;
}
.group-play {
  background: #fff;
}

.group-play-title {
  font-size: 32rpx;
  position: relative;
  padding: 10rpx 16rpx;
}

.group-play-title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 2%;
  height: 2rpx;
  width: 96%;
  background: #ddd;
}

.play-items {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.play-item {
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 16rpx;
}

.play-item view {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

/*tips*/

.tips {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: #ddd;
  color: #f45580;
  text-align: center;
}

/*拼团信息*/

.group-list {
  background: #fff;
}

.group-list-title {
  font-size: 32rpx;
  position: relative;
  padding: 10rpx 16rpx;
}

.group-list-title::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 2%;
  height: 2rpx;
  width: 96%;
  background: #ddd;
}

.group-list-item {
  display: flex;
  flex-direction: row;
}

.group-info {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.group-leader-img {
  align-self: center;
  margin-left: 16rpx;
}

.group-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 8rpx 10rpx;
}

.group-lack {
  font-size: 22rpx;
  color: #999;
}

.group-join {
  color: #f45580;
  font-size: 26rpx;
  border: 3rpx solid #f45580;
  border-radius: 5rpx;
  padding: 8rpx;
  margin-right: 16rpx;
  align-self: center;
}

/*商品详情*/

.goods-des {
  margin-top: 10rpx;
  background: #fff;
}

.goods-des-title {
  padding: 10rpx 16rpx;
  font-size: 32rpx;
}

.goods-detail {
  background: #ddd;
  line-height: 40rpx;
  padding: 10rpx 16rpx;
  font-size: 26rpx;
  color: #666;
}

/*购买*/

.goods-pay {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.goods-pay-single, .goods-pay-group {
  flex: 2;
  background: #ffc548;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods-pay-group {
  flex: 3;
  background: #f45580;
}
