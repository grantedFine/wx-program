/* pages/user/user.wxss */

page {
  background: #ddd;
}

.user-header {
  height: 500rpx;
  width: 100%;
  background: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.iconfont {
  font-size: 60rpx;
}

.icon-wexin {
  width: 180rpx;
  height: 180rpx;
  font-size: 150rpx;
  box-sizing: border-box;
  padding: 15rpx;
  border-radius: 50%;
  color: #999;
  background: #fff;
}

.wexin-login {
  margin-top: 10rpx;
  padding: 8rpx;
  color: #fff;
  font-size: 32rpx;
  border: 2rpx solid #fff;
  border-radius: 8rpx;
}

.user-detail {
  background: #fff;
  margin-top: 10rpx;
}

.user-order {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.user-order::after {
  content: "";
  position: absolute;
  left: 2%;
  bottom: 0;
  display: block;
  width: 96%;
  height: 2rpx;
  background: #ddd;
}

.order-look {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.order-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.order-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
